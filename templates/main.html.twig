<!DOCTYPE html>
<html>
  <head>
    {# header #}
    {% embed "header.html.twig" %}
    {% block head %}{% endblock %}
    {% endembed %}
  </head>
  <body>
    {# menu #}
    {% embed "menu.html.twig" with {'menu': menu} %}
    {% block menu %}{% endblock %}
    {% endembed %}

    <!-- Page Contents -->
    <div class="pusher">
      <div class="ui inverted vertical masthead center aligned segment">
        <div class="ui text container">
          <h1 class="ui inverted header">
            {# title page #}
            {{ title }}
          </h1>
        </div>
      </div>

      <div class="ui vertical stripe segment content">
        <div class="ui middle aligned stackable grid container">
          <div class="row">
            {# content #}
            {% block content %}
            {% endblock %}
            <div class="three wide column"></div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
